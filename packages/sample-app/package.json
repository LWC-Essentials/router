{
    "name": "sample-app",
    "description": "LWC Essentials Router Example",
    "private": "true",
    "version": "0.4.3",
    "author": "Bret Little",
    "bugs": "https://github.com/LWC-Essentials/router/issues",
    "dependencies": {
        "@lwce/router": "^0.4.2",
        "history": "^4.10.1",
        "lwc": "^1.7.1",
        "matchit": "^1.0.8",
        "prettier": "^2.0.4"
    },
    "devDependencies": {
        "@lwc/compiler": "^1.7.1",
        "@lwc/engine": "^1.7.1",
        "@lwc/rollup-plugin": "^1.7.1",
        "@lwc/synthetic-shadow": "^1.7.1",
        "@lwc/wire-service": "^1.7.1",
        "husky": "^3.1.0",
        "lint-staged": "^9.5.0",
        "node-static": "^0.7.11",
        "rollup": "^2.2.0",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-compat": "^0.22.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-replace": "^2.2.0",
        "rollup-plugin-visualizer": "^4.0.1"
    },
    "engines": {
        "node": ">=10.0.0"
    },
    "homepage": "https://github.com/LWC-Essentials/router",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "keywords": [
        "lwc"
    ],
    "license": "BSD-3-Clause",
    "lint-staged": {
        "**/*.{css,html,js,json,md,ts,yaml,yml}": [
            "prettier --write"
        ],
        "./src/**/*.js": [
            "eslint"
        ],
        "*": [
            "git add"
        ]
    },
    "repository": "LWC-Essentials/router",
    "scripts": {
        "start": "npm run build && npm run serve",
        "build": "rollup -c rollup.config.js",
        "serve": "static --spa -p 8080 src"
    }
}
